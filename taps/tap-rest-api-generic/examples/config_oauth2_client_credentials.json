{
    "_comment": "Example: OAuth 2.0 Client Credentials (Microsoft / Salesforce / etc.)",

    "api_url": "https://your-instance.api.com/v2",
    "auth_method": "oauth2",
    "oauth2_token_url": "https://login.microsoftonline.com/your-tenant-id/oauth2/v2.0/token",
    "oauth2_client_id": "your-client-id",
    "oauth2_client_secret": "your-client-secret",
    "oauth2_grant_type": "client_credentials",
    "oauth2_scope": "https://your-instance.api.com/.default",

    "user_agent": "tap-rest-api-oauth2",
    "start_date": "2024-01-01T00:00:00Z",

    "streams": [
        {
            "name": "contacts",
            "path": "/contacts",
            "primary_keys": ["contactId"],
            "replication_key": "modifiedDate",
            "replication_method": "INCREMENTAL",
            "records_path": "$.value",
            "pagination_style": "odata",
            "params": {
                "$orderby": "modifiedDate asc"
            },
            "bookmark_filter": "$filter=modifiedDate ge {bookmark}",
            "bookmark_filter_param": "$filter",
            "denest": true
        },
        {
            "name": "accounts",
            "path": "/accounts",
            "primary_keys": ["accountId"],
            "replication_method": "FULL_TABLE",
            "records_path": "$.value",
            "pagination_style": "odata",
            "denest": true
        }
    ]
}
